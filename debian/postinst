#!/bin/bash

case "$1" in
    'configure')
        
        if [ ! -e /etc/ros ]
        then
            ln -s /etc/ros-groovy /etc/ros
        fi
        if getent passwd ros >/dev/null; then
            setuidgid ros ROS_HOME=/var/lib/ros/.ros rosdep update
        fi
        if [ -e "/var/lib/ros" ]; then
	    chown -R ros:ros /var/lib/ros
            chmod 2775 /var/lib/ros
	fi

        ;;

    *)
        ;;

esac
#DEBHELPER#
